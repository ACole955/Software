function palindrome(str) {
  let myRegex = /[a-z0-9]/ig;
  let input = str.match(myRegex);
  let forwards = "";
  let backwards = "";
  for (let i=0; i <input.length; i++){
    forwards += input[i];
  };
  for (let j= input.length-1; j > -1; j--){
    backwards += input[j];
  };
  console.log(forwards.toLowerCase())
  if (forwards.toLowerCase() == backwards.toLowerCase()){
    return true;
  }else{return false}
}
